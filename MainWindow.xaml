<Window x:Class="LibraryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LibraryApp" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock Text="Library Menu" FontSize="20" Margin="10"/>
            <Button Content="Replacing books" Click="ReplacingBooks_Click" Margin="10"/>
            <Button Content="Identifying areas" Click="IdentifyingAreas_Click" Margin="10"/>
            <Button Content="Finding call numbers" Click="FindingCallNumbers_Click" Margin="10"/>
            <TextBlock Name="OutputText" Margin="10"/>
            <ComboBox Name="CallNumbersComboBox" Margin="10"/>
            <Button Content="Check Order" Click="CheckOrder_Click" Margin="10"/>
            <TextBlock x:Name="ScoreText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" />
        </StackPanel>
    </Grid>
</Window>